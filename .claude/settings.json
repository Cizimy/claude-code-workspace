{
  "permissions": {
    "allow": [
      "WebFetch(domain:zenn.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(cd:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(pip:*)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(make:*)",
      "Bash(docker:*)",
      "Bash(jq:*)",
      "Bash(gh:*)",
      "Bash(chmod:*)",
      "Bash(paplay:*)",
      "Bash(speaker-test:*)",
      "Bash(notify-send:*)",
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "LS(*)",
      "Glob(*)",
      "Grep(*)",
      "Task(*)",
      "TodoWrite(*)",
      "NotebookRead(*)",
      "NotebookEdit(*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(chown:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "WebFetch(domain:*)",
      "WebSearch(*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-tool/tdd-guard.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/pre-tool/constitution-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-tool/unused-detector.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop/coverage-check.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/notification/sound-notifier.sh"
          }
        ]
      }
    ]
  }
}